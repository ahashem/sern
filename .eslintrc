{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    // Node
    "no-mixed-requires": 1,
    "no-restricted-modules": 2,
    "callback-return": 2,
    "handle-callback-err": 0,
    // ES6
    "no-var": 1,
    "constructor-super": 1,
    "no-duplicate-imports": 1,
    "no-const-assign": 1,
    // Variables
    "init-declarations": 1,
    "no-delete-var": 1,
    "no-label-var": 1,
    "no-shadow-restricted-names": 1,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unused-vars": 0,
    // Misc.
    "vars-on-top": 2,
    "no-useless-escape": 1,
    "eqeqeq": 1
  }
}
